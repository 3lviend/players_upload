<div class="wrapper">
  <p id="notice"><%= notice %></p>
  
  <div>
    <h1 class="title d-inline">Images</h1> 
    <%= link_to 'New Image', new_image_path %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Images</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td>
            <% image.files.each do |file| %>
              <%= image_tag(file, width: '100px') %>
            <% end %>
          </td>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>